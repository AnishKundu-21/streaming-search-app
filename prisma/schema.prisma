generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model WatchlistItem {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @db.Uuid
  contentId    Int
  mediaType    String
  seasonNumber Int      @default(0)
  title        String
  posterPath   String?
  addedAt      DateTime @default(now())

  @@unique([userId, contentId, mediaType, seasonNumber])
  @@map("watchlist")
}

model WatchedItem {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @db.Uuid
  contentId    Int
  mediaType    String
  seasonNumber Int      @default(0)
  title        String
  posterPath   String?
  watchedAt    DateTime @default(now())
  rating       Int?

  @@unique([userId, contentId, mediaType, seasonNumber])
  @@map("watched")
}